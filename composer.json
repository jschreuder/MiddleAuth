{
    "name": "jschreuder/middle-auth",
    "description": "AuthZen implementation in PHP based on PSR-15 architecture",
    "type": "library",
    "require": {
        "php": ">=8.4"
    },
    "require-dev": {
        "psr/log": "^3.0",
        "pestphp/pest": "^4.1",
        "mockery/mockery": "^1.6"
    },
    "suggest": {
        "monolog/monolog": "For logging with the default AuthLogger (or any other psr/log implementation)"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "jschreuder\\MiddleAuth\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Jelmer Schreuder",
            "email": "github@jelmerschreuder.nl"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
